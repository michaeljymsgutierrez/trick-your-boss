{
  "manifest_version": 3,
  "name": "Trick your boss",
  "version": "1.0",
  "description": "Make youself busy!",
  "permissions": ["activeTab", "tabs", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
